    {% if ticket%}
    <div style = "width:320px; height:240px; position:fixed; right:40%; top:30%; background:#fff; z-index:999999; border: 1px solid #000">
    <h2> Номер вашей заявки: {{ticket}} </h2>
    {{ticket_url}}
    <a href="{{ticket_url}}"><button>OK</button></a>
    </div>
    {%endif%}
    <h1>{{ text_test }}</h1>
    <form method = "POST">
    <input type = "hidden" name = "product_id" value = "{{product_id}}">
    <div class = "row">
        <div class = "col-sm-4">
            <label>Имя*<input type = "text"  placeholder = "Иван" name = "consumer_name"></label>
            <label>Почта<input type="email" placeholder = "email@example.com" name = "consumer_mail"></label>
        </div>
        <div class = "col-sm-4">
            <label>Номер телефона*<input type = "tel" placeholder = "8 999 123 45 67" name = "consumer_tel"></label>
            <label>Vin-номер<input placeholder = "JHLRE48577C415490" name = "consumer_vin"></label>
        </div>
        <div class = "col-sm-12">
            <textarea placeholder = "Опишите подробнее ваш вопрос" name = "consumer_text"></textarea>
            <button name = "action" value = "send_callback" >Кнопка отправки формы и обновления БД</button>
        </div>
    </div>
    </form>
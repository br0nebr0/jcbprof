{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
 
      <!-- Кнопки управления -->
      <div class="pull-right">
      <a href="{{options_link}}"><button>Настройки модуля</button></a>
      <a href="{{categories_link}}"><button>Категории схем</button></a>
      <a href="{{schemes_link}}"><button>Схемы</button></a>
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
 
      <!-- Название модуля -->
      <h1>{{ heading_title }}</h1>
 
      <!-- Хлебные крошки -->
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
 
    </div>
  </div>
 
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
      <div class="col-md-6">
             <canvas id = "canv" height='320' width='480' style = "background: url('{{scheme_image}}'); background-repeat:no-repeat; border: 1px solid black;"> </canvas>
      </div>
    <div class = "col-md-6">
    <form method = "POST">
    <table border = "1" id = "point-form" width = "100%">
    <tr>
    <th>X</th>
    <th>№</th>
    <th>Описание</th>
    <th>Действие</th>
    </tr>
    {% for point in points %}
    <tr>
        <td><input name="delete[]" type="checkbox" value="{{point.num}}"></td>
        <td><input name="point[]" type="text" value = "{{point.num}}"></td>
        <input name="id[]" type="hidden" value="{{point.id}}">
        <input name="x-coord[]" type="hidden" value="{{point.x}}">
        <input name="y-coord[]" type="hidden" value="{{point.y}}">
        <td><input name="desc[]" type="text" value = "{{point.desc}}"></td>
        <td><a href = "{{point_link}}{{point.id}}">Установить фильтр</a></td>
    </tr>
    {% endfor %}
    </table>
    <button name = "action" value = "save"> Сохранить список</button> 
    </form>
    <button onclick="del_str()">Удалить выбранное</button>
    </div>
  <script type="text/javascript" src="view/javascript/scheme.js"></script>
      </div>
    </div>
  </div>
</div>
{{ footer }}
{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
 
      <!-- Кнопки управления -->
      <div class="pull-right">
       <a href="{{categories_link}}"><button>{{scheme_cat}}</button></a>
       <a href="{{schemes_link}}"><button>{{schemes}}</button></a>
       <a href="{{options_link}}"><button>{{settings}}</button></a>
      </div>
 
      <!-- Название модуля -->
      <h1>{{ heading_title }}</h1>
 
      <!-- Хлебные крошки -->
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
 
    </div>
  </div>
 
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{categories_title}}</h3>
      </div>
      <div class="panel-body">
      <table border = "1" width = "100%">
        <tr>
            <th>id</th>
            <th>изображение</th>
            <th>{{scheme_cat_name}}</th>
            <th>{{text_action}}</th>
        </tr>
      {% for row in rows %}
      <form method = "POST">
        <td><input type="hidden" name = "id" value = "{{row.id}}"> {{row.id}}</td>
        <td><img src = "/image/scheme/{{row.image}}" width = "150px"></td>
        <td><input  name = "name" value = "{{row.name}}"></input></td>
        <td><button name = "action" value = "change">{{text_action_change}}</button><button name = "action" value = "delete">{{text_action_remove}}</button></td>
        </tr>
      </form>
      {% endfor %}
    <form method = "POST" enctype = "multipart/form-data">
        <td>#</td>
         <td><input type="file" name = "category_image"></td>
        <td><input name = "name" placeholder = "{{new_cat_placeholder}}"></input></td>
        <td><button name = "action" value = "add">{{text_action_add}}</button></td>
      </form>
      </table>
      </div>
    </div>
  </div>
</div>
{{ footer }}
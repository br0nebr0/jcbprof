{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
 
      <!-- Кнопки управления -->
      <div class="pull-right">
      <a href="{{options_link}}"><button>Настройки модуля</button></a>
      <a href="{{categories_link}}"><button>Категории схем</button></a>
      <a href="{{schemes_link}}"><button>Схемы</button></a>
      </div>
 
      <!-- Название модуля -->
      <h1>{{ heading_title }}</h1>
 
      <!-- Хлебные крошки -->
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
 
    </div>
  </div>
 
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
      <table border = "1" width = "100%">
        <tr>
            <th>id</th>
            <th>Название категории</th>
            <th>Действие</th>
        </tr>
      {% for row in rows %}
      <form method = "POST">
        <td><input type="hidden" name = "id" value = "{{row.id}}"> {{row.id}}</td>
        <td><input  name = "name" value = "{{row.name}}"></input></td>
        <td><button name = "action" value = "change">Изменить</button><button name = "action" value = "delete">УДАЛИТЬ</button></td>
        </tr>
      </form>
      {% endfor %}
    <form method = "POST">
        <td>#</td>
        <td><input name = "name" placeholder = "Название новой категории"></input></td>
        <td><button name = "action" value = "add">ДОБАВИТЬ</button></td>
      </form>
      </table>
      </div>
    </div>
  </div>
</div>
{{ footer }}
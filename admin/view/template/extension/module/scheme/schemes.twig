{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
 
      <!-- Кнопки управления -->
      <div class="pull-right">
      <a href="{{options_link}}"><button>Настройки модуля</button></a>
      <a href="{{categories_link}}"><button>Категории схем</button></a>
      <a href="{{schemes_link}}"><button>Схемы</button></a>
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
 
      <!-- Название модуля -->
      <h1>{{ heading_title }}</h1>
 
      <!-- Хлебные крошки -->
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
 
    </div>
  </div>
 
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <table width="100%" border="1">
          <tr>
            <th>id</th>
            <th>Миниатюра</th>
            <th>Название</th>
            <th>Категория</th>
            <th>Двигатель</th>
            <th>Действие</th>
          </tr>
           {% for row in rows %}
           <form method = "POST">
          <tr>
            <td><input type="hidden" name = "id" value = "{{ row.id }}">{{row.id}}</td>
            <td><img src = "/image/scheme/{{row.image}}" width = "100px"></td>
            <td><input name = "scheme_name" value = "{{row.name}}"></td>
            <td> <select name = "scheme_cat">{% for cat in cats %}
            <option value = "{{cat.id}}" {% if cat.id == row.category_id %} selected {% endif %}>{{cat.name}}</option>
            {% endfor %} </select></td>
            <td>
            <select name = "scheme_engine">
                <option value = "0" {% if row.engine == 0 %} checked {% endif %}>Универсальный</option>
                <option value = "1" {% if row.engine == 1 %} checked {% endif %}>3 СХ</option>
                <option value = "2" {% if row.engine == 2 %} checked {% endif %}>4 СХ</option>
                </select>
            </td>
            <td><button name="action" value="change">Изменить</button>
            <br><button name="action" value="delete">Удалить</button>
            <br><a href="{{point_link}}&scheme_id={{row.id}}"> Установить точки</a></td>
          </tr>
          </form>
          {% endfor %}
       
        <tr>
        <form method = "POST" enctype = "multipart/form-data">
            <td>#</td>
            <td><input type="file" name = "scheme_image"></td>
            <td><input name = "scheme_name" placeholder = "Название схемы"></td>
            <td> <select name = "scheme_cat">{% for cat in cats %}
            <option value = "{{cat.id}}">{{cat.name}}</option>
            {% endfor %} </select></td>
            <td>
               <select name = "scheme_engine">
                <option value = "0" selected>Универсальный</option>
                <option value = "1">3 СХ</option>
                <option value = "2">4 СХ</option>
                </select>
            </td>
            <td><button name="action" value="add">Добавить схему</button></td>
        </form>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
{{ footer }}